{
  "name": "generator-react-spa-client",
  "verbose": true,
  "setupFilesAfterEnv": [
    "jest-extended",
    "./test/setup.js",
    "./test/helpers.js"
  ],
  "setupFiles": [
    "jest-prop-type-error"
  ],
  "moduleFileExtensions": ["js", "json", "jsx", "ts", "tsx", "node"],
  "globals": {
    "NODE_ENV": "test"
  },
  "transform": {
    "^.+\\.jsx?$": "babel-jest"
  },
  "snapshotSerializers": ["enzyme-to-json/serializer"],
  "collectCoverageFrom": [
    "src/components/**/*.{js,jsx}",
    "src/reducks/**/*.js",
    "src/integration/**/*.js",
    "src/lib/**/*.js",
    "src/config/**/*.js"
  ],
  "coverageReporters": [
    "json-summary",
    "text",
    "html",
    "lcov"
  ],
  "coverageDirectory": "coverage",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/public/",
    "/dist"
  ]
}
